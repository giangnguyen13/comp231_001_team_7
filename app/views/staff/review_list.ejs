<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
    <link href="/css/staffPortal.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/staff-navbar-auth'); %>
            <%- include('../partials/sidebar-staffPortal'); %>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" style="margin-left: 18rem">
                <div class="row">
                    <h2 style="max-width: fit-content;">Review List</h2>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-sm" style="max-width: 85%">
                        <thead>
                            <tr>
                                <th style="width: 10%;">Rating</th>
                                <th style="width: 15%;">Received at</th>
                                <th>Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% reviews.forEach(function(review){ %>
                            <tr>
                                <td><%= review.star%> <label for="star5" class="text-warning">â˜†</label></td>
                                <td><%= review.created%></td>
                                <td><%= review.comment%></td>
                            </tr>
                            <% })%>

                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
        feather.replace();
    </script>
    <script>
        $(document).ready(function () {
            sessionStorage.setItem("staff", "Giang KW");
        });
    </script>
</body>

</html>