<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <%- include('../partials/head'); %>
    </head>

    <body>
        <%- include('../partials/staff-navbar-auth'); %>
        <h2 class="text-center">Add New Product</h2>
        <div class="container pt-4">
            <form
                action="/products"
                method="post"
                enctype="multipart/form-data"
            >

            <hr>
                <div class="row">
                        <img id='preview' src="/img/products-img/beverage_placeholder.png"
                            style="height: 20%; width: 20%; display: block; margin-left: auto; margin-right: auto;">
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right">
                            <label style="font-weight: bold"
                                >Product ID:
                            </label>
                        </div>
                        <div class="col-4">
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Enter your productId"
                                name="productId"
                                required
                            />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right">
                            <label style="font-weight: bold">Title: </label>
                        </div>
                        <div class="col-4">
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Enter title"
                                name="title"
                                required
                            />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right">
                            <label style="font-weight: bold">Content: </label>
                        </div>
                        <div class="col-4">
                            <input
                                type="text"
                                class="form-control"
                                placeholder="Enter content"
                                name="content"
                            />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right">
                            <label style="font-weight: bold">Price: </label>
                        </div>
                        <div class="col-4">
                            <input
                                type="number"
                                class="form-control"
                                placeholder="Enter price"
                                name="price"
                                min="1" 
                                oninput="validity.valid||(value='');"
                            />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right">
                            <label style="font-weight: bold"
                                >Product Image</label
                            >
                        </div>
                        <div class="col-4">
                            <input
                                type="file"
                                class="form-control"
                                accept="image/*"
                                name="productImage"
                                onchange="loadFile(event)"
                            />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row p-2">
                        <div class="col-5 text-right"></div>
                        <div class="col-4">
                            <input
                                type="submit"
                                class="btn btn-lg btn-success"
                                value="Add Product"
                            />
                        </div>
                    </div>
                </div>
  
            </form>
        </div>
        <script>
            const loadFile = function(event) {
            var reader = new FileReader();
            reader.onload = function(){
            var preview = document.getElementById('preview');
            preview.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        };

        </script>
    </body>
</html>
