<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <%- include('../partials/navbar'); %>
        <main class="container">
            <div class="starter-template text-center py-5 px-3">
                <h1>Login Page</h1>
                <p class="lead">You are not logged in. Please sign in</p>
                <form action="/login" method="POST">
                    <div class="row g-3 justify-content-center">
                        <div class="col-2">
                            <label for="email" class="col-form-label"
                                >Email</label
                            >
                        </div>
                        <div class="col-3">
                            <input
                                type="email"
                                id="email"
                                name="email"
                                class="form-control"
                            />
                        </div>
                    </div>
                    <br />
                    <div class="row g-3 justify-content-center">
                        <div class="col-2">
                            <label for="password" class="col-form-label"
                                >Password</label
                            >
                        </div>
                        <div class="col-3">
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="form-control"
                            />
                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                </form>
            </div>
        </main>
    </body>
</html>
